NAME = push_swap

CFLAGS += -Wall -Werror -Wextra


SRC = ft_atoi.c ft_atoll.c ft_strcmp.c \
	  main.c option.c list.c algo.c \
	  operator.c operator2.c operator3.c ft_putnbr.c\

HEADER = push_swap.h

OBJ = $(patsubst %.c,%.o, $(SRC))

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME) -g
	@echo "\033[0;32m                     .__                                          "
	@echo "\033[0;32m ______  __ __  _____|  |__        ________  _  _______  ______   "
	@echo "\033[0;32m \____ \|  |  \/  ___/  |  \      /  ___/\ \/ \/ /\__  \ \____ \  "
	@echo "\033[0;32m |  |_> >  |  /\___ \|   Y  \     \___ \  \     /  / __ \|  |_> > "
	@echo "\033[0;32m |   __/|____//____  >___|  /____/____  >  \/\_/  (____  /   __/  "
	@echo "\033[0;32m |__|              \/     \/_____/    \/               \/|__|     "

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJ)

fclean: clean
	@echo "\033[0;31m  (         (                 (     "
	@echo "\033[0;31m  )\ )      )\ )      *   )   )\ )  "
	@echo "\033[0;31m (()/(  (  (()/( (    )  /(( (()/(  "
	@echo "\033[0;31m  /(_)) )\  /(_)))\  ( )(_))\ /(_)) "
	@echo "\033[0;31m (_))_ ((_)(_)) ((_)(_(_()|(_|_))_  "
	@echo "\033[0;31m  |   \| __| |  | __|_   _| __|   \ "
	@echo "\033[0;31m  | |) | _|| |__| _|  | | | _|| |) |"
	@echo "\033[0;31m  |___/|___|____|___| |_| |___|___/ "
	@echo "\033[0m"
	rm -f $(NAME)

re: fclean all

.PHONY: re fclean clean all
